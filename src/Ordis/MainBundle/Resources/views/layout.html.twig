<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="{{ asset('bundles/ordis/images/logo_renovate.png') }}">

    <title>RENOVATE | {% block title %}Layout{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('bundles/ordis/css/bootstrap.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('bundles/ordis/css/styles.css') }}" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="{{ asset('bundles/ordis/js/ie-emulation-modes-warning.js') }}"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block head %}{% endblock %}
    
  </head>

  <body>
  	<nav id="user-navbar" class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        {% if app.user %}
        <div id="navbar" class="collapse navbar-collapse">
        	<p id="date" class="navbar-text navbar-left">{{ "now"|date("l d F Y") }}</p>
        	<ul class="nav navbar-nav navbar-right">
        		<li class="dropdown">
	              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ app.user.name ~ ' ' ~ app.user.surname }} <span class="caret"></span></a>
	              <ul class="dropdown-menu" role="menu">
	                <li><a href="#">Action</a></li>
	                <li><a href="#">Another action</a></li>
	                <li><a href="#">Something else here</a></li>
	                <li class="divider"></li>
	                <li><a href="{{ path('ordis_logout') }}">Вийти</a></li>
	              </ul>
	            </li>
        	</ul>
        </div>
        {% else %}
        <div id="navbar" class="collapse navbar-collapse">
          <p id="date" class="navbar-text"></p>
          <form class="navbar-form navbar-right" action="{{ path('ordis_login_check') }}" method="post">
          	<div class="form-group">
              <input type="text" placeholder="Логін" class="form-control {% if error is defined and error %}btn-danger{% endif %}" name="_username" {% if last_username is defined %}value="{{ last_username }}"{% endif %}>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Пароль" class="form-control {% if error is defined and error %}btn-danger{% endif %}" name="_password">
              <input type="hidden" name="_target_path" value="{{app.request.attributes.get('_route')}}">
            </div>
            <button type="submit" class="btn btn-success">УВІЙТИ</button>
          </form>
        </div><!--/.nav-collapse -->
        {% endif %}
      </div>
    </nav>
	<div class="header-background"><img src="{{ asset('bundles/ordis/images/header_renovate.jpg') }}"/><a href="{{ path('ordis_main_homepage') }}"><img src="{{ asset('bundles/ordis/images/logo_renovate.png') }}"/></a></div>
    <nav id="main-navbar" class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar2" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar2" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li {% if app.request.attributes.get('_route') == 'ordis_main_homepage' %}class="active"{% endif %}><a href="{{ path('ordis_main_homepage') }}">Головна</a></li>
            <li><a href="#tariffs">Тарифи</a></li>
            <li {% if app.request.attributes.get('_route') == 'ordis_jobs' %}class="active"{% endif %}><a href="{{ path('ordis_jobs') }}">Види робіт</a></li>
            <li><a href="#results">Результати роботи</a></li>
            <li><a href="#news">Новини</a></li>
            <li><a href="#about">Про нас</a></li>
            <li {% if app.request.attributes.get('_route') == 'ordis_contacts' %}class="active"{% endif %}><a href="{{ path('ordis_contacts') }}">Контакти</a></li>
          </ul>
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" placeholder="Введіть запит..." class="form-control">
            </div>
            <button type="submit" class="btn btn-success">ПОШУК!</button>
          </form>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
	  {% block content %}{% endblock %}
    </div><!-- /.container -->
	<div class="footer-background"><img src="{{ asset('bundles/ordis/images/footer_renovate.png') }}"/></div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset('bundles/ordis/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/ordis/js/bootstrap.min.js') }}"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="{{ asset('bundles/ordis/js/ie10-viewport-bug-workaround.js') }}"></script>
  	<script type="text/javascript" src="{{ asset('bundles/ordis/js/layout.js') }}"></script>
  	<script>
  	var URLS = {
  			jobsGetNg: "{{ path('ordis_ng_jobs') }}",
  			contactUsNg: "{{ path('ordis_ng_contacts_contactus') }}"
  	}
  	</script>
  	{% block javascripts %}{% endblock %}
  </body>
</html>
