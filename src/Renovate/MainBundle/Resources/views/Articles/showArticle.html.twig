{% extends "RenovateMainBundle::layout.html.twig" %}

{% block title %}{{article.name}}{% endblock %}
{% block description %}<meta name="description" content="{{article.description}}">{% endblock %}
{% block head %}
<script type="text/javascript" src="//vk.com/js/api/openapi.js?116"></script>
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
 	<li><a href="{{path('renovate_main_homepage')}}">Головна</a></li>
 	<li><a href="{{path('renovate_articles')}}">Статті</a></li>
 	<li class="active">{{article.name}}</li>
</ol>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-2" style="margin-top: 5px;">
			<!-- VK -->
			<div id="vk_like" class="vk"></div>
		</div>
		<div class="col-md-2" style="margin-top: 5px;">
			<!-- FB -->
			<div class="fb-share-button" data-href="{{ app.request.uri }}" data-layout="button_count"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
  				<h2>{{article.name}}</h2>
  				<p>{{article.created|date("d.m.Y H:i")}}</p>
  				<hr>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="data-content">
				<div class="col-md-4">
					<img src="{{asset(article.document.path)}}" alt="{{article.name}}" class="img-thumbnail">
				</div>
				<div class="text-justify">{{article.description | raw}}</div>
			</div>
		</div>
	</div>
{% endblock %} 

{% block javascripts %}
<script src="{{ asset('web/bundles/renovate/js/vkButton.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/fbButton.js') }}"></script>
{% endblock %}