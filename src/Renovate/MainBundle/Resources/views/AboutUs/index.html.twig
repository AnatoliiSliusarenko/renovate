{% extends "RenovateMainBundle::layout.html.twig" %}

{% block title %}
{% if page and page.title != '' %}{{page.title}}{% else %}Про нас{% endif %}
{% endblock %}

{% block keywords %}
	{% if page and page.keywords != '' %}
		<meta name="keywords" content="{{page.keywords}}">
	{% endif %}
{% endblock %}

{% block description %}
	{% if page and page.description != '' %}
		<meta name="description" content="{{page.description}}">
	{% endif %}
{% endblock %}

{% block head %}
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
 	<li><a href="{{path('renovate_main_homepage')}}">Головна</a></li>
 	<li class="active">Про нас</li>
</ol>
{% endblock %}

{% block content %}
<div class="row">
	<div class="col-md-12">
		{% if page %}
		{{ page.content | raw }}
		{% endif %}
	</div>
</div>
{% endblock %} 

{% block javascripts %}
{% endblock %}