{% extends "RenovateMainBundle::layout.html.twig" %}

{% block title %}
{% if page and page.title != '' %}{{page.title}}{% else %}{{job.name}}{% endif %}
{% endblock %}

{% block keywords %}
	{% if page and page.keywords != '' %}
		<meta name="keywords" content="{{page.keywords}}">
	{% endif %}
{% endblock %}

{% block description %}
	{% if page and page.description != '' %}
		<meta name="description" content="{{page.description}}">
	{% else %}
		<meta name="description" content="{{job.description | escape | slice(0, 300)}}">
	{% endif %}
{% endblock %}

{% block head %}
<script type="text/javascript" src="//vk.com/js/api/openapi.js?116"></script>
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
 	<li><a href="{{path('renovate_main_homepage')}}">Головна</a></li>
 	<li><a href="{{path('renovate_jobs')}}">Види робіт</a></li>
 	<li class="active">{{job.name}}</li>
</ol>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-2" style="margin-top: 5px;">
			<!-- VK -->
			<div id="vk_like" class="vk" content-title="{{job.getName()}}"></div>
		</div>
		<div class="col-md-2" style="margin-top: 5px;">
			<!-- FB -->
			<div class="fb-share-button" data-href="{{ app.request.uri }}" data-layout="button_count"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
  				<h2>{{job.name}}</h2>
  				<p>{{job.created|date("d.m.Y")}}</p>
  				<hr>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="data-content">
				<div class="col-md-4">
					<img src="{{asset(job.document.path)}}" alt="{{job.name}}" class="img-thumbnail">
				</div>
				<div class="text-justify">{{job.description | raw}}</div>
			</div>
		</div>
	</div>
{% endblock %} 

{% block javascripts %}
<script src="{{ asset('web/bundles/renovate/js/vkButton.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/fbButton.js') }}"></script>
{% endblock %}