            <article style="padding-bottom: 60px; background: none;">

                <div style="padding-top: 0; position: absolute;">
                    <img width="220px" src="{{asset(job.document.path)}}" alt="{{job.name}}"/>
                </div>

                <div class="summary">
                    {{job.description | raw}}
