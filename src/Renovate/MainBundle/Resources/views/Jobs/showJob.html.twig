{% extends "RenovateMainBundle::layout.html.twig" %}

{% block title %}{{job.name}}{% endblock %}

{% block head %}
{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
 	<li><a href="{{path('renovate_main_homepage')}}">Головна</a></li>
 	<li><a href="{{path('renovate_jobs')}}">Види робіт</a></li>
 	<li class="active">{{job.name}}</li>
</ol>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12">
			<blockquote>
  				<h2>{{job.name}}</h2>
  				<footer>{{job.created|date("d.m.Y")}}</footer>
			</blockquote><hr>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="data-content">
				<div class="col-md-4">
					<img src="{{ app.request.getBaseURL() }}/..{{job.document.path}}" alt="Image" class="img-thumbnail">
				</div>
				<div class="text-justify">{{job.description | raw}}</div>
			</div>
		</div>
	</div>
{% endblock %} 

{% block javascripts %}
{% endblock %}