{% extends "RenovateMainBundle::layout.html.twig" %}

{% block title %}Головна{% endblock %}

{% block head %}
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-8" ng-controller="MainSliderController">
			<div class="results-for">
			  <div ng-repeat="item in items"><a href="[[item.href]]"><img src="{{ asset('[[item.label.url || item.document.url]]') }}"/></a><div class="description"><h3>[[item.name | ellipsis:40]]</h3><p ng-bind-html="item.description | ellipsis:400"></p><a class="btn btn-gray btn-xs" href="[[item.href]]">Детальніше</a></div></div>
			</div>
			<div class="results-nav">
			  <div ng-repeat="item in items"><img src="{{ asset('[[item.label.url || item.document.url]]') }}"/></div>
			</div>
		</div>
		<div class="col-md-4">
			<div id="block-last-news" ng-controller="BlockLastNewsController">
				<div class="media" ng-repeat="newsp in news">
				  <a class="media-left" href="[[newsp.href]]" ng-init="setItemDirectHref(newsp)">
				    <img src="{{ asset('[[newsp.label.url || newsp.document.url]]') }}" alt="[[newsp.name]]">
				  </a>
				  <div class="media-body">
				    <p class="title"><a href="[[newsp.href]]">[[newsp.name | ellipsis:30]]</a></p>
				    <p class="description" ng-bind-html="newsp.description | ellipsis:100"></p>
				  </div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8">
			<iframe width="100%" height="400" src="//www.youtube-nocookie.com/embed/2RyjBi6JF0Q" frameborder="0" allowfullscreen></iframe>
		</div>
	</div>
	<div class="row" style="margin-top:10px;" ng-controller="BlockJobsController">
		<div class="col-md-12">
			<div class="jobs-slider">
				  <div ng-repeat="job in jobs"><div class="thumbnail"><a href="[[job.href]]" ng-init="setItemDirectHref(job)"><img src="{{ asset('[[job.label.url || job.document.url]]') }}" alt="[[job.name]]"></a><div class="caption"><h4><a href="[[job.href]]">[[job.name]]</a></h4><p ng-bind-html="job.description | ellipsis:300"></p></div></div></div>
			</div>
		</div>
	</div>
{% endblock %} 

{% block javascripts %}
<script src="{{ asset('web/bundles/renovate/js/angularNewsController.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/angularJobsController.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/angularMainSliderController.js') }}"></script>
{% endblock %}