{% extends "RenovateMainBundle::layout.html.twig" %}

{% block title %}
{% if page and page.title != '' %}{{page.title}}{% else %}Головна{% endif %}
{% endblock %}

{% block keywords %}
	{% if page and page.keywords != '' %}
		<meta name="keywords" content="{{page.keywords}}">
	{% endif %}
{% endblock %}

{% block description %}
	{% if page and page.description != '' %}
		<meta name="description" content="{{page.description}}">
	{% endif %}
{% endblock %}

{% block head %}
<script type="text/javascript" src="//vk.com/js/api/openapi.js?116"></script>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-8" ng-controller="MainSliderController">
			<div class="splash" ng-cloak>
				<div class="image center-block"></div>
			</div>
			<div class="results-for">
			  <div ng-repeat="item in items" ng-cloak><a href="[[item.href]]"><img src="{{ asset('[[item.label.url || item.document.url]]') }}"/></a><div class="description"><h3>[[item.name | ellipsis:40]]</h3><p ng-bind-html="item.description | ellipsis:400"></p><a class="btn btn-gray btn-xs" href="[[item.href]]">Детальніше</a></div></div>
			</div>
			<div class="results-nav">
			  <div ng-repeat="item in items" ng-cloak><img src="{{ asset('[[item.label.url || item.document.url]]') }}"/></div>
			</div>
		</div>
		<div class="col-md-4">
			<div id="block-last-news" ng-controller="BlockLastNewsController">
				<div class="splash" ng-cloak>
					<div class="image center-block"></div>
				</div>
				<div class="media" ng-repeat="newsp in news" ng-cloak>
				  <a class="media-left" href="[[newsp.href]]" ng-init="setItemDirectHref(newsp)">
				    <img src="{{ asset('[[newsp.label.url || newsp.document.url]]') }}" alt="[[newsp.name]]">
				  </a>
				  <div class="media-body">
				    <p class="title"><a href="[[newsp.href]]">[[newsp.name | ellipsis:30]]</a></p>
				    <p class="description" ng-bind-html="newsp.description | ellipsis:100"></p>
				  </div>
				</div>
			</div>
		</div>
	</div>	
			
	<div class="row">
		<div class="col-md-8" id="main_video">
			{% if page %}
			{{ page.content | raw }}
			{% endif %}
		</div>
		<div class="col-md-4">
			<div class="row">
				<div class="col-md-12">
					<div class="fb-like-box" data-href="https://www.facebook.com/renovate.in.ua" data-width="400" data-height="219" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="true"></div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div id="vk_groups"></div>
				</div>
			</div>
		</div>
	</div>
	<div class="row" ng-controller="BlockJobsController" style="margin-top:10px;">
		<div class="col-md-12">
			<div class="splash" ng-cloak>
				<div class="image center-block"></div>
			</div>
			<div class="jobs-slider center-block">
				  <div ng-repeat="job in jobs" ng-cloak><div class="thumbnail"><a href="[[job.href]]" ng-init="setItemDirectHref(job)"><img src="{{ asset('[[job.label.url || job.document.url]]') }}" alt="[[job.name]]"></a><div class="caption"><h4><a href="[[job.href]]">[[job.name]]</a></h4><p ng-bind-html="job.description | ellipsis:280"></p></div></div></div>
			</div>
		</div>
	</div>
{% endblock %} 

{% block javascripts %}
<script src="{{ asset('web/bundles/renovate/js/vkWidget.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/fbSDK.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/angularNewsController.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/angularJobsController.js') }}"></script>
<script src="{{ asset('web/bundles/renovate/js/angularMainSliderController.js') }}"></script>
{% endblock %}